<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/clRoot"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvValidatorImage"

        app:cardCornerRadius="@dimen/spacing_35"

        android:layout_width="@dimen/spacing_70"
        android:layout_height="@dimen/spacing_70"

        android:layout_marginTop="@dimen/spacing_20"
        android:layout_marginBottom="@dimen/spacing_20"
        android:layout_marginStart="@dimen/spacing_15"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivValidatorImage"
            android:layout_width="@dimen/spacing_70"
            android:layout_height="@dimen/spacing_70" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvValidatorTitle"

        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/text_size_20"
        android:fontFamily="@font/raleway_regular"


        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/spacing_18"

        android:text="@string/elon_musk"

        app:layout_constraintStart_toEndOf="@id/cvValidatorImage"
        app:layout_constraintTop_toTopOf="@id/cvValidatorImage"
        app:layout_constraintBottom_toBottomOf="@id/cvValidatorImage"
        app:layout_constraintEnd_toEndOf="parent"/>


    <View
        style="@style/SeparatorView"

        android:layout_marginTop="@dimen/spacing_20"
        android:layout_marginStart="@dimen/spacing_18"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvValidatorImage"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>